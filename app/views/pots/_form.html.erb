<%= form_for @pot, :html => { :class => "form-horizontal pot" } do |f| %>

    <% if @pot.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pot.errors.count, "error") %> prohibited this pot from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@pot[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :descritpion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@pot[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :cash_demand, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cash_demand, :class => 'form-control' %>
    </div>
    <%= error_span(@pot[:cash_demand]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            pots_path, :class => 'btn btn-default' %>

<% end %>
