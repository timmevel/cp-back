<%- model_class = DemandMaterial -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pot_id) %>:</strong></dt>
  <dd><%= @demand_material.pot_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_id) %>:</strong></dt>
  <dd><%= @demand_material.material_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @demand_material.quantity %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              demand_materials_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_demand_material_path(@demand_material), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              demand_material_path(@demand_material),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
